{
  "name": "nova-admin",
  "version": "2.0.0",
  "private": true,
  "description": "开箱即用的后台管理平台",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:web": "pnpm --filter @nova-admin/web dev",
    "dev:gateway": "pnpm --filter @nova-admin/gateway dev",
    "dev:auth": "pnpm --filter @nova-admin/auth-service dev",
    "dev:rbac": "pnpm --filter @nova-admin/rbac-service dev",
    "dev:system": "pnpm --filter @nova-admin/system-service dev",
    "build:web": "pnpm --filter @nova-admin/web build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "psq": "docker exec -it nova-postgres psql -U postgres -d nova_admin",
    "db:schema": "docker exec -i nova-postgres psql -U postgres -d nova_admin < database/migrations/schema.sql",
    "db:seed": "docker exec -i nova-postgres psql -U postgres -d nova_admin < database/seeds/seed.sql",
    "db:init": "pnpm db:schema && pnpm db:seed"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
